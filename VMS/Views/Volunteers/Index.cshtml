@model IEnumerable<VMS.Models.Volunteer>

@{
    ViewData["Title"] = "Index";
}


<div class="card">

    <div class="card-header">
        <h4>Volunteers</h4>
    </div>
    <div class="card-body">
        <div class="btn-group mb-3">
            <a type="button" class="btn btn-outline-success" asp-action="Create">Add New+</a>
            <button type="button" class="btn btn-outline-primary ml-3 dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Filter
            </button>
            <div class="dropdown-menu">
                <a type="button" class="dropdown-item" asp-action="ShowApprovedPending">Approved/Pending Approal</a>
                <a type="button" class="dropdown-item" asp-action="ShowApproved">Approved</a>
                <a type="button" class="dropdown-item" asp-action="ShowPending">Pending Approval</a>
                <a type="button" class="dropdown-item" asp-action="ShowDisapproved">Disapproved</a>@*
                <a type="button" class="dropdown-item" asp-action="#">Inactive</a>*@
                <div class="dropdown-divider"></div>
                <a type="button" class="dropdown-item" asp-action="Index">All</a>
            </div>
            <form class="ml-3" asp-action="ShowSearchResults">
                <div class="form-row align-items-center">
                    <div class="">
                        <label class="sr-only" for="SearchPhrase"></label>
                        <input name="SearchPhrase" class="form-control" id="inlineFormInputName" placeholder="Name">
                    </div>
                    <div class="col-auto">
                        <button type="submit" value="Search" class="btn  btn-outline-primary">Search</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>
                            First Name
                        </th>
                        <th>
                            Last Name
                        </th>
                        <th>
                            UserName
                        </th>
                        @*<th>
                                Preferences
                            </th>*@
                        <th>
                            Email
                        </th>
                        <th>
                            Approval status
                        </th>
                        <th>
                            Active
                        </th>
                        <th>Actions</th>
                        <th>Opportunities</th>
                    </tr>
                </thead>
                <tbody class="table table-striped">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.preferences)
                                </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ApprovalStatus)
                            </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ActiveStatus)
                                </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a style="text-decoration: none" class="btn-sm btn-info m-sm-1" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a style="text-decoration: none" class="btn-sm btn-info m-sm-1" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                    <a style="text-decoration: none" class="btn-sm btn-info m-sm-1" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </div>

                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a style="text-decoration: none" class="btn-sm btn-warning m-sm-1" asp-action="Opportunities" asp-route-id="@item.Id">View</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



